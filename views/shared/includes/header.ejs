<header class="header">
  <nav class="header__nav">
    <span class="header__nav-icon">
      <img src="" alt="" />
      <h1>GAME</h1>
    </span>
    <ul class="header__nav-list">
      <li class="header__nav-list__item">
        <a href="/">HOME</a>
      </li>
      <li class="header__nav-list__item">TOP GAMES</li>
      <li class="header__nav-list__item">SHOP</li>

      <% if(locals.isAuth && !locals.isAdmin) { %>
      <li class="header__nav-list__item">
        <a href="/cart"> CART </a>
      </li>
      <li class="header__nav-list__item">
        <a href="/orders"> ORDERS </a>
      </li>
      <% } %> <% if(locals.isAdmin) { %>
      <li class="header__nav-list__btn">
        <a href="/admin/products">Manage Products</a>
      </li>
      <li class="header__nav-list__btn">
        <a href="/admin/orders">Manage Orders</a>
      </li>
      <% } %> <% if(locals.isAuth) { %>
      <li class="header__nav-list__btn">
        <form action="/logout" method="POST">
          <input type="submit" value="Logout" />
        </form>
      </li>
      <% } %> <% if(!locals.isAuth) { %>
      <li class="header__nav-list__btn">
        <form action="/login" method="GET">
          <input type="submit" value="Login" />
        </form>
        <form action="/signup" method="GET">
          <input type="submit" value="Sign UP" />
        </form>
      </li>
      <% } %>
      <li class="header__nav-list__btn">PLAY WITH ME</li>
    </ul>
  </nav>
</header>
